<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= homestay.image%>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= homestay.title%>
                    </h5>
                    <p class="card-text">
                        <%= homestay.description%>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= homestay.location%>
                    </li>
                    <li class="list-group-item">&#8377;
                        <%= homestay.price%>/night</li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-info" href="/homestays/<%=homestay._id%>/edit">Edit</a>
                    <form class="d-inline" action="/homestays/<%=homestay._id%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    &copy;HomeStayD 2022
                </div>
            </div>
        </div>
    </div>