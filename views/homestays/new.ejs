<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Homestay</h1>
        <div class="col-6 offset-3">
            <form action="/homestays" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="homestay[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="homestay[location]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="homestay[image]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Homestay Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">&#8377;</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="homestay[price]">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="homestay[description]"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Homestay</button>
                </div>
            </form>
            <a href="/homestays">All Homestays</a>
        </div>
    </div>