<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Homestay</h1>
        <div class="col-6 offset-3">
            <form action="/homestays/<%=homestay._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="homestay[title]" value="<%=homestay.title%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="homestay[location]" value="<%=homestay.location%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="homestay[image]" value="<%=homestay.image%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Homestay Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">&#8377;</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="homestay[price]" value="<%=homestay.price%>">
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="homestay[description]"><%=homestay.description%></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Homestay</button>
                </div>
            </form>
            <a href="/homestays/<%=homestay._id%>">Back To Homestay</a>
        </div>
    </div>