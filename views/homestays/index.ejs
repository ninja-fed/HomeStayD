<% layout('layouts/boilerplate')%>

    <div id="cluster-map"></div>
    <h1>All Homestays</h1>
    <div>
        <a href="/homestays/new">Add Homestay</a>
    </div>
    <% for (let homestay of homestays) {%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <% if(homestay.images.length) {%>
                        <img src="<%=homestay.images[0].url%>" class="img-fluid" alt="">
                        <% } else {%>
                            <img src="https://res.cloudinary.com/dj6oihbar/image/upload/v1652719335/HomeStayD/rh9ztyu3znomdroemf62.jpg" class="img-fluid" alt="">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= homestay.title %>
                        </h5>

                        <p class="card-text">
                            <%= homestay.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= homestay.location %>
                            </small>
                        </p>
                        <a href="/homestays/<%= homestay._id %> " class="btn btn-primary">View <%=homestay.title %> </a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const homestays = {
                    features: <%- JSON.stringify(homestays) %>
                }
            </script>

            <script src="/javascripts/clusterMap.js"></script>